# ===========================================
# AI SEO OS - Environment Configuration
# Copy to .env and fill in values.
# ===========================================

# API
NODE_ENV=development
API_PORT=3000
API_URL=http://localhost:3000

# Server (backend)
PORT=3000
HOST=0.0.0.0

# Database (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# Redis
REDIS_URL=redis://localhost:6379

# AI (Gemini)
GEMINI_API_KEY=your-gemini-api-key

# OAuth (Google Search Console)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/integrations/gsc/callback

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# WordPress (optional, for testing)
WORDPRESS_URL=https://example.wordpress.com
WORDPRESS_USERNAME=xxxxx
WORDPRESS_PASSWORD=xxxxx

# Encryption (optional)
ENCRYPTION_KEY=xxxxx-32-chars-minimum-required

# Frontend
FRONTEND_URL=http://localhost:5173
VITE_API_URL=http://localhost:3000
VITE_GEMINI_API_KEY=your-gemini-api-key

# Webhooks
WEBHOOK_SECRET=xxxxx
WEBHOOK_IP_WHITELIST=
